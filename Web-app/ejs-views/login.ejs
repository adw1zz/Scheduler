    <container>
    <div class="log-in">
        <form method="post">
            <h3 class="text-center">Login</h3>
            <div class="form-group">
                <input class="form-control item" type="text" name="username" pattern="^[a-zA-Z0-9_.-]*$" id="Username" placeholder="Your username" required>
            </div>
            <div class="form-group">
                <input class="form-control item" type="password" name="password" id="password" placeholder="Password" required>
            </div>
            <div class="form-group">
                <button class="btn-log-in" type="submit">Submit</button>
            </div>
            <div class="log-in-a">
               <a href="/regisrtation">Create new account</a> 
            </div>
        </form>
    </div>
